@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<section class="signup">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignUp">
            <h1>Create Account</h1>
            <p>
                Already have a account?
                <a asp-controller="Auth" asp-action="SignIn">Sign In</a>
            </p>
            <div>
                @ViewData["StatusMessage"]
            </div>
            <div class="form-content">
                <div class="input-group">
                    <label class="input-label" asp-for="FirstName"></label>
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="input-group">
                    <label class="input-label" asp-for="LastName"></label>
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="input-group">
                    <label class="input-label" asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-group">
                    <label class="input-label" asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-group">
                    <label class="input-label" asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="checkbox-group">
                    <div class="input-terms input-group">
                        <input asp-for="TermsAndConditions" />
                        <label asp-for="TermsAndConditions">
                            I accept the <a asp-action="Terms" asp-controller="About">Terms</a> & <a asp-action="Conditions" asp-controller="About">Conditions</a>
                        </label>
                        <span asp-validation-for="TermsAndConditions"></span>
                    </div>
                </div>
                <button class="input-submit btn btn-theme" type="submit">Sign up</button>
            </div>

        </form>
    </div>
</section>