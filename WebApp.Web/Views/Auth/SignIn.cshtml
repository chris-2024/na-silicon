@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<section class="signin">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignIn">
            <h1>Sign In</h1>
            <p>
                Don't have a account yet?
                <a asp-controller="Auth" asp-action="SignUp">Sign Up here</a>
            </p>

            <div class="alert">
                @ViewData["statusMessage"]
            </div>

            <div class="form-content">

                <div class="input-group">
                    <label class="input-label" asp-for="Email"></label>
                    <input asp-for="Email" required />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-group">
                    <label class="input-label" asp-for="Password"></label>
                    <input asp-for="Password" required />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="checkbox-group">
                    <div class="input-terms input-group">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
                <button class="input-submit btn btn-theme" type="submit">Sign in</button>
            </div>
        </form>
    </div>
</section>