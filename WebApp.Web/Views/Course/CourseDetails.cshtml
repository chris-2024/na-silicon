@model CourseEntity;

@{
    ViewData["ActivePage"] = "Course";
}

<section class="course-details">
    <div class="container">
        <div >
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Title">
        </div>
        <div >
            <h2>@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Category:</strong> @(Model.Category?.CategoryName ?? "")</p>
            <p><strong>Price:</strong> $@Model.OriginalPrice</p>
            @if (Model.DiscountPrice != null)
            {
                <p><strong>Discount Price:</strong> $@Model.DiscountPrice</p>
            }
            <p><strong>Hours:</strong> @Model.Hours</p>
            @if (!string.IsNullOrEmpty(Model.LikesInProcent))
            {
                <p><strong>Likes:</strong> @Model.LikesInProcent%</p>
            }
            <p><strong>Is Digital:</strong> @Model.IsDigital</p>
            <p><strong>Created:</strong> @Model.Created.ToShortDateString()</p>
            <p><strong>Last Updated:</strong> @Model.LastUpdated.ToShortDateString()</p>
        </div>
    </div>
</section>